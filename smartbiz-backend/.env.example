# Application
NODE_ENV=development
PORT=3000

# SQLite Database (Primary - Offline)
DB_PATH=./data/smartbiz.db

# PostgreSQL Database (Cloud Backup - Optional)
PG_HOST=localhost
PG_PORT=5432
PG_USER=smartbiz
PG_PASSWORD=your_secure_password_here
PG_DATABASE=smartbiz_backup

# JWT Security
JWT_SECRET=your_jwt_secret_key_min_32_characters_long
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Encryption Keys (CHANGE IN PRODUCTION!)
ENCRYPTION_KEY=your_32_byte_encryption_key_here
BACKUP_KEY=your_backup_encryption_key_here!

# Company Settings
COMPANY_NAME=SmartBiz ERP
DEFAULT_CURRENCY=INR
DECIMAL_PLACES=2
